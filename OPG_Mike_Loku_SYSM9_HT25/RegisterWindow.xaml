<Window x:Class="OPG_Mike_Loku_SYSM9_HT25.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPG_Mike_Loku_SYSM9_HT25"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical" Background="LightBlue">
        <TextBlock Text="Registrera dig" FontSize="36" HorizontalAlignment="Center" Margin="20"/>
        <TextBlock Text="Användarnamn" HorizontalAlignment="Center"/>
        <TextBox Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                 Width="200" HorizontalAlignment="Center" Margin="0,5,0,5"/>
        <TextBlock Text="Lösenord" HorizontalAlignment="Center"/>
        <TextBox Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                 Width="200" HorizontalAlignment="Center" Margin="0,5,0,5"/>
        <TextBlock Text="Välj land" HorizontalAlignment="Center" Margin="0,5,0,5"/>
        <ComboBox Name="Country" Width="300">
            <ComboBoxItem Content="Sverige"/>
            <ComboBoxItem Content="Norge"/>
            <ComboBoxItem Content="Finland"/>
            <ComboBoxItem Content="Island"/>
        </ComboBox>
        
        <Button x:Name="Register" Content="Registrera" HorizontalAlignment="Center" Width="100" Margin="10" Click="BtnRegister"/>

    </StackPanel>
</Window>
