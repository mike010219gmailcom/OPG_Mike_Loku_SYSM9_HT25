<Window x:Class="OPG_Mike_Loku_SYSM9_HT25.RecipeDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPG_Mike_Loku_SYSM9_HT25"
        mc:Ignorable="d"
        Title="RecipeDetailsWindow" Height="450" Width="800">
    
    <Grid Background="LightBlue">
           <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
           </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Detaljer" FontSize="26" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="10,10,0,10"/>

            <StackPanel Grid.Row="1" Margin="20,0,20,0">
                <TextBlock Text="Titel:" FontWeight="Bold"/>
                <TextBox x:Name="TitleBox" Text="{Binding Title}" Margin="0,0,0,5" IsReadOnly="True"/>

                <TextBlock Text="Ingredienser:" FontWeight="Bold"/>
                <TextBox x:Name="IngredientsBox" Text="{Binding Ingredients}" Height="40" Margin="0,0,0,5"
                         IsReadOnly="True"/>

                <TextBlock Text="Instruktioner:" FontWeight="Bold"/>
                <TextBox x:Name="InstructionsBox" Text="{Binding Instructions}" Height="80" Margin="0,0,0,5"
                         IsReadOnly="True"/>

                <TextBlock Text="Kategori:" FontWeight="Bold"/>
                <TextBox x:Name="CategoryBox" Text="{Binding Category}" Margin="0,0,0,5"
                         IsReadOnly="True"/>

                <TextBlock Text="Tid:" FontWeight="Bold"/>
                <TextBox x:Name="DateBox" Text="{Binding Date, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" 
                         Margin="0,0,0,5" IsReadOnly="True"/>

                <TextBlock Text="Skapad av:" FontWeight="Bold"/>
                <TextBox x:Name="CreatedByBox" Text="{Binding CreatedBy}" Margin="0,0,0,10" IsReadOnly="True"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
                <Button x:Name="Edit" Content="Redigera" Width="100" Height="30" 
                        HorizontalAlignment="Center" Margin="10" Click="Edit_Click"/>
                <Button x:Name="SaveEdits" Content="Spara ändringar" Width="100" Height="30"
                        HorizontalAlignment="Center" Margin="10" Click="SaveEdits_Click" IsEnabled="False"/>
                <Button x:Name="Close" Content="Stäng" Width="100" Height="30" HorizontalAlignment="Center"
                        Click="Close_Click"/>
            </StackPanel>
            

    </Grid>
    
</Window>
