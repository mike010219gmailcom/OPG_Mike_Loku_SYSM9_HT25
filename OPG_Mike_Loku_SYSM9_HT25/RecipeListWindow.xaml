<Window x:Class="OPG_Mike_Loku_SYSM9_HT25.RecipeListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPG_Mike_Loku_SYSM9_HT25"
        mc:Ignorable="d"
        Title="RecipeListWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Height="40" Background="SkyBlue">
            <TextBlock Text="CookMaster" FontSize="16" VerticalAlignment="Center" Margin="10" DockPanel.Dock="Left"/>
            <TextBlock Text="{Binding CurrentUser.DisplayName}" FontSize="16"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Margin="0,0,10,0"
                       DockPanel.Dock="Right"/>
            <Button x:Name="UserDetails" Content="Dina Uppgifter" Width="100" Height="20" DockPanel.Dock="Left"
                    VerticalAlignment="Center" Click="UserDetails_Click"/>
            <Button x:Name="SignOut" Content="Logga Ut" Width="100" Height="20" DockPanel.Dock="Right"
                    VerticalAlignment="Center" Click="SignOut_Click"/>

        </DockPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1" Background="LightBlue">
            
            <TextBlock Text="Receptlistan" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20"/>

            <ListBox x:Name="RecipeList" DisplayMemberPath="Title" Height="200" Margin="10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="AddRecipe" Content="Lägg till recept" Width="150" Height="30" 
                    HorizontalAlignment="left" Margin="10" Click="AddRecipe_Click"/>
                <Button x:Name="Details" Content="Detaljer" Width="150" Height="30" Click="Details_Click"/>
                <Button x:Name="Remove" Content="Ta bort" Width="150" Height="30" Margin="10" Click="Remove_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>

    
</Window>
