<Window x:Class="OPG_Mike_Loku_SYSM9_HT25.UserDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPG_Mike_Loku_SYSM9_HT25"
        mc:Ignorable="d"
        Title="UserDetails" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Background="LightBlue" Grid.Row="0">
            <TextBlock Text="Dina uppgifter" FontSize="26" HorizontalAlignment="Center" Margin="10"/>
            <TextBlock Text="Användarnamn:" FontWeight="Bold" HorizontalAlignment="Center" Margin="20"/>
            <TextBlock Text="{Binding CurrentUser.Username}" HorizontalAlignment="Center" Margin="5" Width="50" Height="20"/>
            <TextBlock Text="Lösenord:" FontWeight="Bold" HorizontalAlignment="Center" Margin="20"/>
            <TextBlock Text="{Binding CurrentUser.Password}" HorizontalAlignment="Center" Width="50" Height="20"/>
            <TextBlock Text="Land:" FontWeight="Bold" HorizontalAlignment="Center" Margin="20"/>
            <TextBlock Text="{Binding CurrentUser.Country}" HorizontalAlignment="Center" Width="50" Height="20"/>
        </StackPanel>

        <StackPanel Background="LightBlue" Grid.Row="1">
            <TextBlock Text="Ändra uppgifter" FontSize="24" HorizontalAlignment="Center" Margin="10"/>
            <TextBlock Text="Nytt Användarnamn:" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBox Text="{Binding NewUsername, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Width="200" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Nytt Lösenord:" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBox Text="{Binding NewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Width="200" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Bekräfta Lösenord:" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBox Text="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Width="200" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            
            <TextBlock Text="Välj land" HorizontalAlignment="Center" Margin="0,5,0,5"/>
            <ComboBox Name="Country" Width="300">
                <ComboBoxItem Content="Sverige"/>
                <ComboBoxItem Content="Norge"/>
                <ComboBoxItem Content="Finland"/>
                <ComboBoxItem Content="Island"/>
            </ComboBox>

            <Button x:Name="UpdateDetails" Content="Uppdatera Uppgifter" Width="150" Height="30" 
                    HorizontalAlignment="Center" Margin="10" Click="UpdateDetails_Click"/>

            <Button x:Name="CancelUpdate" Content="Avbryt" Width="100" Height="20" 
                    HorizontalAlignment="Center" Margin="5" Click="CancelUpdate_Click"/> 


        </StackPanel>

    </Grid>
</Window>
